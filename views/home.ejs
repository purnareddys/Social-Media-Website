<link rel="stylesheet" href="/css/home.css" />
<div>
  <h1>Codeial / <%= title %></h1>
</div>

<section id="feed-posts">
  <h4>Posts</h4>
  <%if(locals.user){ %>
  <form action="/posts/create" id="new-post-form" method="POST">
    <textarea
      placeholder="Type here"
      name="content"
      cols="30"
      rows="30"
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <%} %>

  <div id="display-posts">
    <ul>
      <% for(post of posts){ %>
      <li>
        <h3><%= post.content %></h3>
        <p><%= post.user.name %></p>
      </li>
      <%} %>
    </ul>
  </div>
</section>
